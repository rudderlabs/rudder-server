{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@services/*": ["src/services/*"],
      "@svg/*": ["src/icons/svg/*"],
      "@css/*": ["src/css/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css", "sty", "is", "isNot", "isOr", "isSomeNot"]
      }
    ]
  }
}
